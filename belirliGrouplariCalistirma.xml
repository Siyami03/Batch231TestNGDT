<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Batch 231">
    <test name="Belirli Grouplari calistirma">
        
        <groups>
            <run>
                <include name="smoke"></include>
            </run>
        </groups>       
        
        <packages>
            <package name="techproed.*"></package>
        </packages>
        
    </test>
    
</suite>

